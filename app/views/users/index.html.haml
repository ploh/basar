%h1 Listing users

%table.element_list
  %thead
    %tr
      %th Me
      %th Email
      %th Role
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user == current_user ? "x" : ""
        %td= user.email
        %td= user.role
        %td= link_to 'Edit', edit_user_path(user)
        - if can? :destroy, user
          %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
