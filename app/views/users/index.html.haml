%h1 Listing users

%table.element_list
  %thead
    %tr
      %th Ich
      %th Nr.
      %th Farbe
      %th= User.human_attribute_name(:first_name)
      %th= User.human_attribute_name(:last_name)
      %th Alte Nr.
      %th= User.human_attribute_name(:email)
      %th Modell
      %th= User.human_attribute_name(:role)
      %th Anmeldung
      %th Letzter Login
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td.centered= user == current_user ? "x" : ""
        %td= user.seller_code
        %td{class: user.color}= user.color && t(user.color)
        %td= user.first_name
        %td= user.last_name
        %td.centered= user.old_seller_code
        %td= user.email
        %td.centered= user.seller_model
        %td= user.role
        %td= user.created_at
        %td= user.current_sign_in_at
        %td= link_to 'Edit', edit_user_path(user)
        - if can? :destroy, user
          %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
