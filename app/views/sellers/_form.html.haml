= form_for @seller do |f|
  - if @seller.errors.any?
    #error_explanation
      %h2= "#{pluralize(@seller.errors.count, "error")} prohibited this seller from being saved:"
      %ul
        - @seller.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, autocomplete: :off
  .field
    = f.label :number
    = f.number_field :number, autocomplete: :off
  .field
    = f.label :initials
    = f.text_field :initials, autocomplete: :off
  %table.element_list
    %tr
      %th
      %th Actual
      %th Planned
    - @seller.activities.each do |activity|
      = f.fields_for :activities, activity do |a|
        %tr
          %td
            = activity.task_description
            = a.hidden_field :task_id, value: activity.task_id
            = a.hidden_field :id, value: activity.id
          %td
            .field
              = a.text_field :actual_count, size: 5, maxlength: 5, autocomplete: :off
          %td
            .field
              = a.text_field :planned_count, size: 5, maxlength: 5, autocomplete: :off
  .field
    = f.label :rate_in_percent, "Rate"
    = f.number_field :rate_in_percent, autocomplete: :off
    \%
  .actions
    = f.submit 'Save'
