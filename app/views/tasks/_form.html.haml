= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sort_key
    = f.number_field :sort_key, step: 'any'
  .field
    = f.label :description
    = f.text_field :description

  .field
    = f.label :weight
    = f.number_field :weight, step: 'any'
  .field
    = f.label :limit
    = f.number_field :limit
  .field
    = f.label :only_d
    = f.check_box :only_d
  .field
    = f.label :must_d
    = f.check_box :must_d
  .field
    = f.label :kind
    = f.select :kind, options_for_select(Task.kinds.keys, @task.kind), include_blank: true

  .actions
    = f.submit 'Save'
