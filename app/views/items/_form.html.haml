= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :seller
    = f.text_field :seller
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
